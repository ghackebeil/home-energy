[Unit]
Description=energy bridge mqtt influxdb collection service
Wants=influxdb.service
After=influxdb.service
StartLimitIntervalSec=0

[Service]
Type=simple
SyslogIdentifier=energy_bridge-collectd
Restart=always
RestartSec=10
User=ubuntu
ExecStart=/home/ubuntu/home-energy/venv/bin/python /home/ubuntu/home-energy/code/collect.py

[Install]
WantedBy=multi-user.target
